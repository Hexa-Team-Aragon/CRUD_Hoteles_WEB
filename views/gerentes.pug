extends ./layout/index.pug
block compartircontenido 
  .container-fluid.p-5.superposicion
    .container-fluid
      h2.fs-4.p-0.text-center Lista de Gerentes 
      a.btn.btn-info.d-flex.quitarwidth.align-items-center.mb-3(href='/gerentes/create')
        img(src='/img/agregar-usuario.png', alt="") 
        p.m-0.ps-2 Añadir Gerente
      .alert.alert-dismissible.alert-primary
        button.btn-close(type='button' data-bs-dismiss='alert')
        strong CONSIDERA: NO podras eliminar cualquier gerente que este administrando un hotel activamente. <br />
        | - Si deseas eliminar el gerente actualiza el hotel que administra.

    table.table.table-hover.fondoBlanco
      thead.border.fondoAzulPastel
        tr
          th(scope='col') Nombre
          th(scope='col') Apellido Paterno
          th(scope='col') Apellido Materno
          th(scope='col') Teléfono
          th(scope='col') 
      tbody
        each gerente in gerentes
          tr.table-default
            th(scope='row')
              p.m-0=gerente.name
            td
              p.m-0=gerente.aPaterno
            td
              p.m-0=gerente.aMaterno
            td
              p.m-0=gerente.tel
            td.d-flex.justify-content-end
              p.m-0.me-5.p-0=gerente.hotel 
              a.btn.btn-secondary.mx-2.p-1(href=`/gerentes/update?id=${gerente.id}`) Editar
              a.btn.btn-primary.mx-2.p-1(href=`/gerentes/delete?id=${gerente.id}` class=gerente.ocupado) Eliminar
        
        
